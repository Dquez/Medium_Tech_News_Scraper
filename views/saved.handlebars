<div class="topnav" id="myTopnav">
    <a class="active" href="#medium">Medium Scraper</a>
    <a href="/">Home</a>
</div>
<div id="articles">
    {{#each articles}}
    <!-- Modal -->
    <div class="modal" id="modal-name">
        <div class="modal-sandbox"></div>
        <div class="modal-box">
            <div class="modal-header">
                <div class="close-modal">&#10006;</div>
                <h3>Notes for : {{headline}}</h3>
            </div>
            <div class="modal-body">
                {{!-- <div><button class="notes" data-id={{_id}}>&#10006;</button></div> --}}
                <textarea class='bodyinput' name='body'></textarea>
                {{#each notes}}
                <div>{{note}}<button class="notes" data-id="{{_id}}">&#10006;</button></div>
                {{/each}}
                <button data-id="{{_id}}"class="save-note">Save Note</button>
                <button class="close-modal">Close!</button>
            </div>
        </div>
    </div>
    <p>{{headline}}
        <br />{{summary}}
        <br />{{url}}</p>
    {{!--
    <button data-id={{_id}} class='addNote'>ARTICLE NOTES</button> --}}
    <button class="modal-trigger addNote" data-id="{{_id}}" data-modal="modal-name">Add or check notes!</button>
    <!-- Trigger Modal. -->
    <button data-id={{_id}} class='removeSaved'>REMOVED FROM SAVED</button>
    {{/each}}
</div>

